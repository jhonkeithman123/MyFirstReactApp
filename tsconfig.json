{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "@types/**/*.d.ts",
    "@types/env.d.ts",
    "babel.config.js",
    "env.d.ts",
    "metro.config.js"
  ],
  "exclude": ["node_modules", "assets", "dist"],
  "extends": "expo/tsconfig.base",
  "typeRoots": ["./@types", "./node_modules/@types"]
}
